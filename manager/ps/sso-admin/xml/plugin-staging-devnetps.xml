<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://plugin.powerschool.pearson.com"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation='http://plugin.powerschool.pearson.com plugin.xsd'
          name="SchoolMessengerStaging"
          version="1.0"
          description="SSO for SchoolMessenger application">
    
     <openid host="portal.testschoolmessenger.com" port="443">
          <links>
               <!-- Lines 12-17 are for adding the SchoolMessenger link.  The admin.header and admin.left_nav settings determine where the link is displayed. -->
               <link title="SchoolMessenger - Notification solutions" display-text="SchoolMessenger Staging" path="/portalauth/powerschool?customerurl=devnetps">
                    <ui_contexts>
                         <!-- <ui_context id="admin.header" /> -->
                         <ui_context id="admin.left_nav" />
                         <!-- <ui_context id="teacher.header" /> -->
                    </ui_contexts>
               </link>
               <!-- Remove the entire SchoolMessenger - Contact Manager section below if the customer does not want the Contact Manager link to appear (line 19-23). -->
               <link title="SchoolMessenger - Staging - Contact Manager" display-text="Contact Manager" path="/portalauth/powerschool?customerurl=devnetps">
                    <ui_contexts>
                         <ui_context id="guardian.header" />
                    </ui_contexts>
               </link>
          </links>
     </openid>
     <!-- You must change the <customer_url> reference on line 27 to match the customer's SchoolMessenger URL. -->
     <registration url="https://demo.testschoolmessenger.com/devnetps/api/2/registrations/powerschool">
          <callback-data>powerschool_registration</callback-data>
     </registration>

     <oauth></oauth>

     <publisher name="Reliance Communications Inc.">
          <contact email="support@schoolmessenger.com" />
     </publisher> 
 
</plugin>